<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/accent_material_light"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:id="@+id/topBar"
        android:background="@color/primary_dark_material_dark"
        android:orientation="horizontal"
        android:elevation="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developed by"
            android:layout_marginLeft="@dimen/abc_text_size_large_material"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:textSize="20dp"

        />
        </RelativeLayout>

    <com.example.sony.mixx.RoundedImageView
        android:id="@+id/imageView_round"
        android:layout_width="@dimen/abc_action_bar_stacked_tab_max_width"
        android:layout_height="@dimen/abc_action_bar_stacked_tab_max_width"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:backgroundTintMode="add"
        android:backgroundTint="@color/abc_background_cache_hint_selector_material_light"
        android:src="@drawable/abcd"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textSize="@dimen/abc_text_size_subtitle_material_toolbar"
        android:layout_below="@+id/imageView_round"
        android:shadowRadius="0.9"
        android:shadowColor="#111111"
        android:textColor="#ffffff"
        android:layout_marginTop="@dimen/abc_text_size_display_1_material"
        android:layout_centerHorizontal="true"
        android:text="Shristi Parmanandka" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:textSize="@dimen/abc_text_size_subtitle_material_toolbar"
        android:shadowRadius="0.9"
        android:shadowColor="#111111"
        android:layout_below="@+id/name"
        android:textColor="#ffffff"
        android:layout_marginTop="@dimen/abc_text_size_display_1_material"
        android:layout_centerHorizontal="true"
        android:text="shristiparmanandka@gmail.com" />


</RelativeLayout>
